<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamvat.budgetme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
	<uses-permission android:name="android.permission.INTERNET" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.teamvat.budgetme.HomePage"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamvat.budgetme.AddExpense"
            android:label="@string/title_activity_add_expense"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.teamvat.budgetme.ConfigActivity"
            android:label="@string/title_activity_config"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.teamvat.budgetme.Configure"
            android:label="@string/title_activity_configure"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.teamvat.budgetme.TrackStatus"
            android:label="@string/title_activity_track_status"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.teamvat.budgetme.PieChart"
            android:label="@string/title_activity_pie_chart" >
        </activity>
        <activity
            android:name="com.teamvat.budgetme.ChartPie"
            android:label="@string/title_activity_chart_pie"
            android:screenOrientation="portrait" >
        </activity>
    </application>
</manifest>